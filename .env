# LLM Proxy Environment Configuration
# Copy this to .env and modify values as needed

# ===========================================
# SECURITY SETTINGS (CHANGE IN PRODUCTION!)
# ===========================================
LLM_PROXY_API_KEY=sk-change-me-in-production
REDIS_PASSWORD=your-redis-password-here
ENABLE_AUTH=false

# ===========================================
# ENHANCED FEATURES (true/false)
# ===========================================
ENABLE_SEMANTIC_CLASSIFICATION=false
ENABLE_MODEL_WARMUP=false
ENABLE_STREAMING=true
ENABLE_DETAILED_METRICS=true
ENABLE_REDIS_CACHE=true
ENABLE_CIRCUIT_BREAKER=true

# ===========================================
# MEMORY MANAGEMENT (MB)
# ===========================================
MAX_MEMORY_MB=12288
CACHE_MEMORY_LIMIT_MB=1024
MODEL_MEMORY_LIMIT_MB=6144
SEMANTIC_MODEL_MAX_MEMORY_MB=500

# ===========================================
# OLLAMA CONFIGURATION
# ===========================================
OLLAMA_NUM_PARALLEL=2
OLLAMA_MAX_LOADED_MODELS=2
OLLAMA_GPU_OVERHEAD=0

# ===========================================
# APPLICATION SETTINGS
# ===========================================
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8001

# ===========================================
# DEPLOYMENT EXAMPLES
# ===========================================

# LOW RESOURCE SETUP (4GB RAM):
# MAX_MEMORY_MB=4096
# CACHE_MEMORY_LIMIT_MB=512
# ENABLE_SEMANTIC_CLASSIFICATION=false
# ENABLE_MODEL_WARMUP=false
# OLLAMA_NUM_PARALLEL=1
# OLLAMA_MAX_LOADED_MODELS=1

# HIGH PERFORMANCE SETUP (16GB+ RAM):
# MAX_MEMORY_MB=16384
# CACHE_MEMORY_LIMIT_MB=2048
# ENABLE_SEMANTIC_CLASSIFICATION=true
# ENABLE_MODEL_WARMUP=true
# OLLAMA_NUM_PARALLEL=4
# OLLAMA_MAX_LOADED_MODELS=3

# PRODUCTION SETUP:
# ENABLE_AUTH=true
# LLM_PROXY_API_KEY=sk-your-secure-production-key
# DEBUG=false
# LOG_LEVEL=WARNING
